<?xml version='1.0' encoding='utf-8'?>
<widget id="dev.jusoft.tasks.mobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Jusoft Tasks</name>
    <description>Manage your tasks easily in the cloud</description>
    <author email="support@jusoft.dev" href="https://jusoft.dev/%22%3E">
        JuSoft
    </author>
    <icon density="mdpi" height="32" platform="android" src="../favicon-32x32.png" width="32" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="about:*" />
</widget>
